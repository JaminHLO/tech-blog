<div class="text-left border-dark border-5">
  {{#if my_blog_post}}
  It's mine.
  {{/if}}

  <h2>{{title}}</h2>
  <p>{{description}}</p>
  <p>Created by {{user.name}} on {{format_date date_posted}}</p>
</div>

<br>
<div class="row mt-4">
  <div class="col-md-6">
    <form class="form new-comment-form">
      <div class="form-group">
        <label for="comment-text">Comment:</label>
        <input class="form-input" type="text" id="comment-text" name="comment-text" />
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" data-id="{{id}}">Submit {{id}}</button>
      </div>
    </form>
  </div>

</div>

<script src="../js/comment.js"></script>
